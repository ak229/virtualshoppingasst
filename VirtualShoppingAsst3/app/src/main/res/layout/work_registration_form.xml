<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ub.tuere.virtualshoppingasst.RegistrationForm">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/bname"
        android:hint="Enter Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/bnumber"
        android:layout_below="@+id/bname"
        android:layout_alignParentEnd="true"
        android:hint="Enter work number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/bemail"
        android:layout_below="@+id/bnumber"
        android:layout_alignParentEnd="true"
        android:hint="Enter work email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/wlinkedin"
        android:layout_below="@+id/bemail"
        android:layout_alignParentEnd="true"
        android:hint="Enter LinkedIn id" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/wgithub"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter github id" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/wgithub"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:id="@+id/wwebsite"
        android:hint="Enter website" />

    <TextView
        android:text="Work no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/bnumber"
        android:layout_alignBottom="@+id/bnumber"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="Work email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/bemail"
        android:layout_alignBottom="@+id/bemail"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="Github"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:text="Website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_alignBaseline="@+id/wwebsite"
        android:layout_alignBottom="@+id/wwebsite"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="LinkedIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/wlinkedin"
        android:layout_alignBottom="@+id/wlinkedin"
        android:layout_alignStart="@+id/textView5" />

    <Button
        android:text="Update Work QR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wwebsite"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginTop="36dp"
        android:id="@+id/button"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/bname"
        android:layout_alignBottom="@+id/bname"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp" />
</RelativeLayout>
